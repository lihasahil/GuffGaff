{
  "compilerOptions": {
    "types": ["node"],
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": false
  },
  "exclude": ["node_modules", "build", "dist", "public"]
}
